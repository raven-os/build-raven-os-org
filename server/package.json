{
  "name": "build-raven-os-org-server",
  "version": "1.0.0",
  "description": "build-raven-os-org server",
  "main": "src/index.js",
  "author": "raven-os",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raven-os/build-raven-os-org.git"
  },
  "license": "ISC",
  "engines": {
    "node": "12.13.1",
    "npm": "6.13.2"
  },
  "scripts": {
    "start": "eslint . && node src/index.js",
    "dev": "eslint . && nodemon src/index.js",
    "test": "nyc -s=true true && npm run test:all && npm run coverage",
    "test:all": "eslint . && npm run test:unit -- -R dot && npm run test:integration -- -R dot",
    "test:unit": "nyc -s true --clean false mocha test/unit/mock-database.js test/unit/setup.js test/unit/ --recursive --exit",
    "test:integration": "nyc -s true --clean false mocha test/integration/init test/integration --recursive --exit",
    "coverage": "nyc report --reporter=text --reporter=lcov",
    "apidoc": "apidoc -i src/action -o docs/apidoc/",
    "jsdoc": "jsdoc -a all -d docs/jsdoc/ -r src/controller src/database src/websocket src/action/abstract.js src/*.js -R README.md",
    "migrate:make": "knex migrate:make",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback"
  },
  "dependencies": {
    "amqplib": "^0.5.3",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "bookshelf": "^1.0.1",
    "common-password": "^0.1.2",
    "connect-session-knex": "^1.5.0",
    "convict": "^6.0.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.16.4",
    "express-session": "^1.16.2",
    "express-validator": "^6.1.1",
    "helmet": "^3.21.2",
    "knex": "^0.19.5",
    "knex-migrate": "^1.7.2",
    "lodash": "^4.17.11",
    "nodemailer": "^6.3.0",
    "password-validator": "^5.0.3",
    "pg": "^7.8.0",
    "pg-native": "^3.0.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.5",
    "uuid": "^3.3.3",
    "ws": "^7.2.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.7",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "jsdoc": "^3.6.3",
    "mocha": "^6.2.2",
    "mock-knex": "^0.4.7",
    "mock-require": "^3.0.3",
    "nodemon": "^2.0.1",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2",
    "supertest": "^4.0.2"
  }
}
